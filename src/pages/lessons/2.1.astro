---
import Layout from '../../layouts/Layout.astro';
import LessonContent from '../../components/lessons/LessonContent';
import LessonBlocks from '../../components/lessons/LessonBlocks';
import LessonPrompts from '../../components/lessons/LessonPrompts';
import TextGenerationDemo from '../../components/lessons/TextGenerationDemo';

const lesson = {
  title: "Генерация текста с помощью ИИ",
  topics: [
    "Основы работы с языковыми моделями",
    "Принципы формирования эффективных промптов",
    "Практические примеры использования"
  ]
};

const pageTitle = `Урок 2.1: ${lesson.title}`;
const pageDescription = "Изучите основы генерации текста с помощью искусственного интеллекта, научитесь формировать эффективные промпты и применять ИИ на практике.";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
>
  <main class="lesson-page">
    <div class="container">
      <LessonContent
        client:load
        title={pageTitle}
        topics={lesson.topics}
      />
      <LessonBlocks client:load topics={lesson.topics} />
      <TextGenerationDemo client:load />
      <LessonPrompts client:load lessonTitle={lesson.title} />
    </div>
  </main>
</Layout>

<style>
  .lesson-page {
    padding: 120px 0 4rem;
    min-height: 100vh;
    background: linear-gradient(135deg, rgb(var(--accent-dark)) 0%, #1a1a1a 100%);
  }

  @media (max-width: 768px) {
    .lesson-page {
      padding: 100px 0 3rem;
    }
  }
</style>